// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

model Genre {
    id        Int      @id @default(autoincrement())
    name      String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    dreams     Dream[]      @relation("GenreDream")
    GenreDream GenreDream[]
}

model User {
    id        Int      @id @default(autoincrement())
    name      String
    avatar    String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    dreams    Dream[]     @relation("UserDream")
    Dream     Dream[]
    UserDream UserDream[]
}

model Tag {
    id        Int      @id @default(autoincrement())
    name      String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    dreams   Dream[]    @relation("DreamTag")
    DreamTag DreamTag[]
}

model Image {
    id  Int    @id @default(autoincrement())
    url String

    dream   Dream @relation(fields: [dreamId], references: [id])
    dreamId Int

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Dream {
    id            Int    @id @default(autoincrement())
    name          String
    views         Int    @default(0)
    contributions Int    @default(0)
    summary       String
    description   String

    authorId Int
    author   User @relation(fields: [authorId], references: [id])

    contributors User[] @relation("UserDream")

    genres     Genre[]      @relation("GenreDream")
    GenreDream GenreDream[]

    tags Tag[] @relation("DreamTag")

    images Image[]

    createdAt DateTime    @default(now())
    updatedAt DateTime    @updatedAt
    DreamTag  DreamTag[]
    UserDream UserDream[]
}

model DreamTag {
    dreamId Int
    tagId   Int

    dream Dream @relation(fields: [dreamId], references: [id])
    tag   Tag   @relation(fields: [tagId], references: [id])

    @@id([dreamId, tagId])
    @@index([dreamId])
    @@index([tagId])
}

model UserDream {
    userId  Int
    dreamId Int

    user  User  @relation(fields: [userId], references: [id])
    dream Dream @relation(fields: [dreamId], references: [id])

    @@id([userId, dreamId])
    @@index([userId])
    @@index([dreamId])
}

model GenreDream {
    genreId Int
    dreamId Int

    genre Genre @relation(fields: [genreId], references: [id])
    dream Dream @relation(fields: [dreamId], references: [id])

    @@id([genreId, dreamId])
    @@index([genreId])
    @@index([dreamId])
}
